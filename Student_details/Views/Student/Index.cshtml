@model IEnumerable<Student_details.Models.stu_info>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Student", "Create", null,new{@class="btn btn-primary"})
</p>
<table class="table table-hover table-responsive"  >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Student_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student_Course)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Section)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student_Address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Stu_Id },new { @class="btn btn-primary"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Stu_Id },new { @class="btn btn-success"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Stu_Id },new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
